{
  "name": "storefront_api",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "ENV=dev node src/server.ts",
    "server:dev": "ENV=dev node dist/server.js",
    "server:test": "npm run build && ENV=test node dist/server.js",
    "watch": "ENV=dev tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "watch:test": "ENV=test tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"", 
    "db:up": "ENV=dev db-migrate --env dev up",
    "db:down": "ENV=dev db-migrate --env dev down",
    "db:drop": "ENV=dev db-migrate --env dev db:drop dev",
    "build": "npx tsc",
    "server": "npm run build && npm run server:dev",
    "docker:up": "docker-compose --env-file .env up -d",
    "docker:down": "docker-compose --env-file .env down",
    "docker:test:up": "docker-compose --env-file .env.test up -d",
    "docker:test:down": "docker-compose --env-file .env.test down",
    "jasmine": "npx jasmine-ts",
    "test": "ENV=test db-migrate --env test up && npm run jasmine && ENV=test db-migrate --env test db:drop test",
    "lint": "eslint . --ext .ts",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "author": "Mahmoud Ahmed <mhmoud.aboalazm@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^3.6.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/pg": "^7.14.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^3.6.4",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.3.0",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9"
  }
}
